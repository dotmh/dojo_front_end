mixin createUserTable(typeOfUser)

    div(class="col-md-6")
        h2(align="center")= typeOfUser
        table(class="table table-striped")
            tr
                th User Name
                th Member Since
                th Birthday

            each record in users
                if record.UserType === typeOfUser
                    tr
                        td !{record.NickName}
                        td !{new Date(record.CreatedDate).toUTCString().split(' ').slice(0, 4).join(' ')}
                        td #{new Date(record.DOB).getDate()} #{monthNames[new Date(record.DOB).getMonth()]}


include includes/base.jade
    - var monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
    +createUserTable("Student")
    +createUserTable("Mentor")