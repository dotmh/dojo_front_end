include includes/base.jade

    if loggedInUser
        h1 Welcome #{loggedInUser.NickName}!
    else
        form(method='POST' action='/login' id="loginForm")
            h1 Login
            br
            input(type="hidden" name='_csrf' value=csrfToken)

            div(class="form-group")
                label Nick Name
                br
                input(type="text" placeholder="funkyMonkey12" name="nickName" required)

            div(class="form-group")
                label Password
                br
                input(type="password" placeholder="p4ssw0rd" name="password" required)

            input(type='submit' value='Submit')